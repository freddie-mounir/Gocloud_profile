extends layout.pug

block styles

block content
  // Include components
  include components/preloader.pug
  include components/top-banner.pug
  include components/header.pug

  // Hero Section
  .common-hero
    .container
      .row.align-items-center.text-center
        .col-lg-6.m-auto
          .main-heading
            h1 Odoo implementation
            .space16
            .span
              img(src="images/span1.webp" alt="" loading="lazy")
              |  
              a(href="service.html") Service
              |  
              span.arrow
                i.fa-regular.fa-angle-right
              |  
              | Odoo implementation

  // Marquee Section
  section.hero10-benar
    .container-fluid.p-0
      .row
        .col-12
          .marquee-wrap.marquee-wrap-inner.h-20
            .marquee-text
              .brand-single-box.h-32
                img(src="images/wellcare-removebg-preview.webp" height="50" alt="" loading="lazy")

              .brand-single-box.h-32
                img(src="images/Goldera-removebg-preview.webp" height="50" alt="" loading="lazy")

              .brand-single-box
                img(src="images/unicare-removebg-preview (1).webp" height="50px" alt="" loading="lazy")

              .brand-single-box
                img(src="images/professional-removebg-preview.webp" height="50" alt="" loading="lazy")

              .brand-single-box
                img(src="images/Mashreq-removebg-preview.webp" height="50" alt="" loading="lazy")

              .brand-single-box
                img(src="images/omega-removebg-preview.webp" height="50" alt="" loading="lazy")

              .brand-single-box
                img(src="images/bahgat-removebg-preview.webp" height="50" alt="" loading="lazy")

              .brand-single-box.h-32
                img(src="images/onecare-removebg-preview.webp" height="50" alt="OneCare Partner Logo" loading="lazy")

              .brand-single-box
                img(src="images/egmed-removebg-preview.webp" height="50" alt="" loading="lazy")

              .brand-single-box
                img(src="images/empire_of_gold-removebg-preview.webp" height="50" alt="" loading="lazy")

      .slider-after

  // Implementation Process Section
  section.process-workflow.my-5.position-relative
    .container
      h2.text-center.mb-5(data-aos="fade-up" data-aos-delay="100" data-aos-duration="1000") Our Odoo Implementation Process

      .row.g-4
        .col-lg-3.col-md-6(data-aos="fade-up" data-aos-delay="200" data-aos-duration="1000" style="transition: all 0.3s ease;")
          .card.h-100.border-0.shadow-sm
            .card-body.text-center
              .process-icon.mb-4
                i.fas.fa-search.fa-3x.text-primary
              h4.card-title Requirements Analysis
              p.card-text We analyze your business needs and processes to determine optimal Odoo implementation strategy.

        .col-lg-3.col-md-6(data-aos="fade-up" data-aos-delay="300" data-aos-duration="1000")
          .card.h-100.border-0.shadow-sm
            .card-body.text-center
              .process-icon.mb-4
                i.fas.fa-cogs.fa-3x.text-primary
              h4.card-title Configuration & Setup
              p.card-text Custom configuration of Odoo modules and features according to your requirements.

        .col-lg-3.col-md-6(data-aos="fade-up" data-aos-delay="400" data-aos-duration="1000")
          .card.h-100.border-0.shadow-sm
            .card-body.text-center
              .process-icon.mb-4
                i.fas.fa-code.fa-3x.text-primary
              h4.card-title Development & Integration
              p.card-text Custom module development and third-party system integration as needed.

        .col-lg-3.col-md-6(data-aos="fade-up" data-aos-delay="500" data-aos-duration="1000")
          .card.h-100.border-0.shadow-sm
            .card-body.text-center
              .process-icon.mb-4
                i.fas.fa-graduation-cap.fa-3x.text-primary
              h4.card-title Training & Support
              p.card-text Comprehensive training and ongoing support to ensure successful adoption.

  // Agile & Scrum Methodology Section
  section.agile-methodology.py-5.bg-light
    .container.text-center
      h2.text-center.mb-5(data-aos="fade-up" data-aos-delay="100" data-aos-duration="1000") Our Agile & Scrum Methodology

      .row.g-4
        .col-lg-6(data-aos="fade-right" data-aos-delay="200" data-aos-duration="1000")
          .image.image-anime
            img(src="images/agile.webp" alt="Agile Scrum Methodology" class="img-fluid rounded shadow-sm" style="max-width: 80%;" loading="lazy")

        .col-lg-6(data-aos="fade-left" data-aos-delay="300" data-aos-duration="1000")
          .methodology-content
            h3.mb-4 Why We Choose Agile
            .methodology-features
              .feature.mb-4
                h5
                  i.fas.fa-check-circle.text-primary.me-2
                  | Iterative Development
                p Regular delivery of working software with continuous feedback and improvements.

              .feature.mb-4
                h5
                  i.fas.fa-check-circle.text-primary.me-2
                  | Flexibility & Adaptability
                p Quick response to change and evolving business requirements.

              .feature.mb-4
                h5
                  i.fas.fa-check-circle.text-primary.me-2
                  | Client Collaboration
                p Close partnership with clients throughout development process.

              .feature
                h5
                  i.fas.fa-check-circle.text-primary.me-2
                  | Sprint-Based Delivery
                p Regular sprints ensuring measurable progress and timely delivery.

  // Implementation Methodology Section
  .space40
  .container.align-items-center
    .text-center
      h1(data-aos="fade-up" data-aos-duration="400" data-aos-delay="500").implementation-title Implementation Methodology

    .methodology-steps
      .step(data-aos="fade-right" data-aos-duration="400" data-aos-delay="200")
        .icon-circle
          span.icon-placeholder üë§
        p.step-text REQ Analysis

      .line

      .step(data-aos="fade-right" data-aos-duration="400" data-aos-delay="300")
        .icon-circle
          span.icon-placeholder üìã
        p.step-text Design

      .line

      .step(data-aos="fade-right" data-aos-duration="400" data-aos-delay="400")
        .icon-circle
          span.icon-placeholder ‚öôÔ∏è
        p.step-text UAT

      .line

      .step(data-aos="fade-right" data-aos-duration="400" data-aos-delay="500")
        .icon-circle
          span.icon-placeholder ‚úÖ
        p.step-text Training

      .line

      .step(data-aos="fade-right" data-aos-duration="400" data-aos-delay="600")
        .icon-circle
          span.icon-placeholder üë•
        p.step-text Support

  // Include footer
  include components/footer.pug

  // Include whatsapp button
  include components/whatsapp-button.pug
