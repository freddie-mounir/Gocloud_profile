extends layout.pug

block styles

block content
  // Include components
  include components/preloader.pug
  include components/top-banner.pug
  include components/header.pug

  // Hero Section
  .common-hero
    .container
      .row.align-items-center.text-center
        .col-lg-6.m-auto
          .main-heading
            h1 Odoo Development
            .space16
            .span
              img(src="images/span1.webp" alt="" loading="lazy")
              |  
              a(href="service.html") Service
              |  
              span.arrow
                i.fa-regular.fa-angle-right
              |  
              | Cloud Services

  // Marquee Section
  section.hero10-benar
    .container-fluid.p-0
      .row
        .col-12
          .marquee-wrap.marquee-wrap-inner.h-20
            .marquee-text
              .brand-single-box.h-32
                img(src="images/wellcare-removebg-preview.webp" height="50" alt="" loading="lazy")

              .brand-single-box.h-32
                img(src="images/Goldera-removebg-preview.webp" height="50" alt="" loading="lazy")

              .brand-single-box
                img(src="images/unicare-removebg-preview (1).webp" height="50px" alt="" loading="lazy")

              .brand-single-box
                img(src="images/professional-removebg-preview.webp" height="50" alt="" loading="lazy")

              .brand-single-box
                img(src="images/Mashreq-removebg-preview.webp" height="50" alt="" loading="lazy")

              .brand-single-box
                img(src="images/omega-removebg-preview.webp" height="50" alt="" loading="lazy")

              .brand-single-box
                img(src="images/bahgat-removebg-preview.webp" height="50" alt="" loading="lazy")

              .brand-single-box.h-32
                img(src="images/onecare-removebg-preview.webp" height="50" alt="OneCare Partner Logo" loading="lazy")

              .brand-single-box
                img(src="images/egmed-removebg-preview.webp" height="50" alt="" loading="lazy")

              .brand-single-box
                img(src="images/empire_of_gold-removebg-preview.webp" height="50" alt="" loading="lazy")

      .slider-after

  // Text & Image Section
  .container.my-5
    .row.align-items-center
      .col-lg-6
        h2.fw-bold.mb-4(data-aos="fade-right" data-aos-delay="200" data-aos-duration="1000") Odoo Development Excellence
        p.lead.mb-4(data-aos="fade-right" data-aos-delay="300" data-aos-duration="1000") We deliver comprehensive Odoo development solutions tailored to your business needs. Our expert team specializes in:
        ul.list-unstyled(data-aos="fade-right" data-aos-delay="400" data-aos-duration="1000")
          li.mb-3
            i.fas.fa-check-circle.text-primary.me-2
            | Custom Module Development
          li.mb-3
            i.fas.fa-check-circle.text-primary.me-2
            | Third-party Integrations
          li.mb-3
            i.fas.fa-check-circle.text-primary.me-2
            | Performance Optimization
          li.mb-3
            i.fas.fa-check-circle.text-primary.me-2
            | Technical Support & Maintenance

      .col-lg-6(data-aos="fade-right" data-aos-delay="200" data-aos-duration="1000")
        .position-relative.image-anime(style="transition: transform 0.3s ease-in-out;" onmouseover="this.style.transform='skew(3deg, 3deg)'" onmouseout="this.style.transform='scale(1)'")
          img(src="images/odoo fix.webp" alt="Odoo Development" class="img-fluid rounded shadow-lg" loading="lazy")
          .position-absolute.top-0.start-0.w-100.h-100

  // Image & Text Section
  .container.my-5
    .row.align-items-center
      .col-lg-6(data-aos="fade-left" data-aos-delay="200" data-aos-duration="1000")
        .position-relative.image-anime(style="transition: transform 0.3s ease-in-out;" onmouseover="this.style.transform='skew(3deg, 3deg)'" onmouseout="this.style.transform='scale(1)'")
          img(src="images/visit CRM.webp" alt="Odoo Development" class="img-fluid rounded shadow-lg" loading="lazy")
          .position-absolute.top-0.start-0.w-100.h-100

      .col-lg-6
        h2.fw-bold.mb-4(data-aos="fade-left" data-aos-delay="300" data-aos-duration="1000") Industry customized Oddo workflow
        p.lead.mb-4(data-aos="fade-left" data-aos-delay="300" data-aos-duration="1000") Our Odoo workflow solutions are meticulously customized for different industries, from manufacturing to retail. We analyze your sector-specific requirements, optimize business processes, and implement tailored Odoo modules that streamline operations and boost productivity across your organization.
        ul.list-unstyled(data-aos="fade-left" data-aos-delay="400" data-aos-duration="1000")
          li.mb-3
            button.btn.rounded-pill.px-4.py-2.bg-primary.text-white.border-0.hover-intense(style="transition: all 0.3s ease;")
              i.fas.fa-check-circle.me-2
              | Pharma CRM managment system

          li.mb-3
            button.btn.rounded-pill.px-4.py-2.bg-warning.text-white.border-0.hover-intense(style="transition: all 0.3s ease;")
              i.fas.fa-check-circle.me-2
              | Gold investment management system

  // Include footer
  include components/footer.pug

  // Include whatsapp button
  include components/whatsapp-button.pug
